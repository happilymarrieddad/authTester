div.row
	div.col-md-4.col-md-offset-4
		div.panel.panel-primary
			div.panel-heading
				h4.panel-title Login Page
			div.panel-body
				div.form-group
					label Email
					input#email.form-control(type="text",placeholder="Enter your email here")
				div.form-group
					label Password
					input#password.form-control(type="password")
				hr
				div.form-group
					h6#login-errors-message.text-center.text-danger(style="display:none")
				div.form-group
					button#login-button.btn.btn-primary.btn-block Login